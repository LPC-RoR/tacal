<% unless @coleccion['app_observaciones'].empty? %>
	<% @coleccion['app_observaciones'].each do |obs| %>
		<small><small><b><%= obs.app_perfil.email %></b> <%= obs.app_perfil.created_at.strftime("%d-%m-%Y") %></small></small></br>
		<small><%= sanitize simple_format(obs.detalle) %></small>
		<% if obs.app_perfil.id == perfil_activo_id %>
			<%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: obs} %>
		<% end %>
		<hr>
	<% end %>
<% end %>
