<p id="notice"><%= notice %></p>

<h1>B Reglas</h1>

<table>
  <thead>
    <tr>
      <th>Idioma</th>
      <th>Tipo palabra</th>
      <th>Accion</th>
      <th>B regla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @b_reglas.each do |b_regla| %>
      <tr>
        <td><%= b_regla.idioma %></td>
        <td><%= b_regla.tipo_palabra %></td>
        <td><%= b_regla.accion %></td>
        <td><%= b_regla.b_regla %></td>
        <td><%= link_to 'Show', b_regla %></td>
        <td><%= link_to 'Edit', edit_b_regla_path(b_regla) %></td>
        <td><%= link_to 'Destroy', b_regla, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

