<% if a == 'seleccion' %>

	<%= render partial: '0p/general/btn_turbolink', locals: {texto: nil, gly: 'hand-index', link: "#{@link_seleccion}#{objeto.id}", clr: color(objeto.class.name.tableize), delete: false} %>

<% else %>

	<%= render partial: '0p/tabla/btns_e', locals: {objeto: objeto} %>
	<!-- BOTONES ESTADO : SOLO -->
	<%= render partial: '0p/tabla/btns_estado', locals: {objeto: objeto, estados: objeto.class.name.constantize::ESTADOS, link_estado: "/#{objeto.class.name.tableize}/#{objeto.id}/estado?estado="} if estados_conditions(objeto) %>

	<% x_btns(objeto).each do |btn| %>
		<% if x_conditions(objeto, btn[0]) %> 
			<%= render partial: '0p/general/btn_proceso', locals: {texto: btn[0], link: link_x_btn(objeto, btn[1], btn[2]), clr: color(objeto.class.name.tableize), delete: false} %>
		<% end %>
	<% end %>
<% end %>