<div class='row'>
	<div class='col-md-1'></div>
	<div class='col-md-10'>
		<h4 class='text-muted'><i class="bi bi-question-square"></i> <%= cristiano(@objeto.class.name, 'class', 'singular') %></h4>
		<h5 class='text-muted'><i class="bi bi-question-square-fill"></i> <%= @objeto.tutorial %></h5>

		<%= sanitize simple_format(@objeto.detalle) %>

		<h5 class='text-muted'><i class="bi bi-list-ol"></i> Paso a paso</h5>

		<% unless @coleccion['hlp_pasos'].empty? %>
			<table class="table table-striped table-sm  thead-dark">
				<tbody>
					<% @coleccion['hlp_pasos'].each do |paso| %>
						<tr><td><%= "#{paso.orden} : #{paso.paso}" %></td><td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: paso} %></td></tr>
						<tr><td colspan="2"><small><%= sanitize simple_format(paso.detalle) %></small></td></tr>
					<% end %>
				</tbody>
			</table>
		<% end %>

		<%= render partial: '0p/general/btn_turbolink', locals: {texto: "Paso", gly: 'plus-circle', link: get_new_link('hlp_pasos'), clr: color('hlp_pasos'), delete: false} if admin? %>

	</div>
</div>
